{
  "kind": "collectionType",
  "collectionName": "leave_details",
  "info": {
    "singularName": "leave-detail",
    "pluralName": "leave-details",
    "displayName": "Leave-details",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "leaveDayType": {
      "type": "enumeration",
      "enum": ["sick_leave", "vacation_leave", "personal_leave"],
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["approve", "cancel", "waiting"],
      "required": false,
      "default": "waiting"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "leaveDetails"
    }
  }
}
