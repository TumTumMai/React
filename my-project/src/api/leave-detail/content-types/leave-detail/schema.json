{
  "kind": "collectionType",
  "collectionName": "leave_details",
  "info": {
    "singularName": "leave-detail",
    "pluralName": "leave-details",
    "displayName": "Leave-details",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "startDate": {
      "type": "date",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "endDate": {
      "type": "date",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "leaveDayType": {
      "type": "enumeration",
      "enum": ["sick_leave", "vacation_leave", "personal_leave"],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "status": {
      "type": "enumeration",
      "enum": ["approve", "waiting", "cancel"],
      "required": true,
      "default": "waiting",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "leaveDetail",
      "required": true
    }
  }
}
